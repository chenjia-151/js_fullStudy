/* miniprogram/pages/index/index.wxss */
.new-item{
    width: 80%;
    height: 200rpx;
    display: flex;
    justify-content: space-between;
    padding: 20rpx;
    box-shadow: 0px 7px 20px #ececec;
    border-radius: 38rpx;
    margin: 40rpx auto;
    background-color: #fff;
}
.new-item image{
    width: 124rpx;
    height: 124rpx;
}
.right-conner{
    display: flex;
    /* 向y轴弹性 */
    flex-direction: column;
    justify-content: space-between;
}
.right-conner .item-name{
    margin-right: 14rpx;
}
.icon-arrow{
    text-align: right;
    padding-right: 13rpx;
}
.new-item:hover{
    box-shadow: none;
}